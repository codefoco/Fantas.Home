{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "nugets/**"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "favicon.ico"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Fantas",
      "_appTitle": "Fantas",
      "_appLogoPath": "images/logo.svg",
      "_enableSearch": true,
      "pdf": false
    }
  }
}